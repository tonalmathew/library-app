<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="css/styles.css">
    <title>Hello, world!</title>
</head>

<body>
    <!-- nav -->
    <div>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="/home">
                    <%=title%>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <% for(i=0 ; i<navbar.length; i++){%>
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="<%=navbar[i].link%>">
                                    <%=navbar[i].name%>
                                </a>
                            </li>
                            <%}%>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    <!-- /nav -->


    <div class="container">
        <div class="home-heading">
            <h2 class="text-center">Books Available</h2>
        </div>
        <div class="books-content d-flex justify-content-evenly">


            <div class="card mb-3" style="margin-top: 50px;
            margin-bottom: 50px;
            background-color: rgb(251, 251, 251);
            height: 90%;
            width: 80%px;
            box-shadow: 0 4px 8px 0 rgba(204, 204, 204, 0.694), 0 6px 20px 0 rgba(204, 204, 204, 0.694);
            border-radius: 15px;
            padding: 10px;">
                <img class="mx-auto" style="height: 200px; width: 300px; margin:3% 0 0 0%;" src="<%=book.img%>" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=book.title%>
                    </h5>
                    <p class="card-text">
                        <%=book.details%>
                    </p>
                    <p class="fst-italic">
                        <%=book.genre%>
                    </p>
                    <p class="fst-normal"><b>Author:</b>
                        <%=book.author%>
                    </p>

                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                </div>

            </div>
        </div>
        <!-- Optional JavaScript; choose one of the two! -->

        <!-- Option 1: Bootstrap Bundle with Popper -->
        <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>

    Option 2: Separate Popper and Bootstrap JS
     -->
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>

</body>

</html>