<%-include("header")-%>

    <div class="container">
        <div class="home-heading">
            <h2 class="text-center">Books Available</h2>
        </div>
        <div class="books-content d-flex justify-content-evenly">


            <div class="card mb-3" style="margin-top: 50px;
            margin-bottom: 50px;
            background-color: rgb(251, 251, 251);
            height: 90%;
            width: 80%px;
            box-shadow: 0 4px 8px 0 rgba(204, 204, 204, 0.694), 0 6px 20px 0 rgba(204, 204, 204, 0.694);
            border-radius: 15px;
            padding: 10px;">
                <img class="mx-auto" style="height: 200px; width: 300px; margin:3% 0 0 0%;" src="<%=book.img%>" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=book.title%>
                    </h5>
                    <p class="card-text">
                        <%=book.details%>
                    </p>
                    <p class="fst-italic">
                        <%=book.genre%>
                    </p>
                    <p class="fst-normal"><b>Author:</b>
                        <%=book.author%>
                    </p>

                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                </div>

            </div>
        </div>
        <%-include("footer")-%>